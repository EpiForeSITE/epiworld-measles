{
    "build": {
        "dockerfile": "Containerfile"
    },
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "extensions": [
                "quarto.quarto",
                "ms-vscode.makefile-tools",
                "ms-vscode.cpptools-extension-pack",
                "eamodio.gitlens"
            ]
        }
    },
    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached,readonly"
    ]
}